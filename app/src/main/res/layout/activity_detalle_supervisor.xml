<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalle_supervisor">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="347dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Supervisor"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="363dp"
        android:layout_height="269dp"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <!-- Nombre -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Nombre"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNombre3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto"
            android:textColor="#555555"
            android:textSize="15sp" />

        <!-- Apellido -->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Apellido"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvApellido3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto"
            android:textColor="#555555"
            android:textSize="15sp" />

        <!-- Sueldo -->
        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Sueldo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSueldo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto"
            android:textColor="#555555"
            android:textSize="15sp" />

        <!-- Turno -->
        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Turno"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTurno3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto"
            android:textColor="#555555"
            android:textSize="15sp" />

        <!-- DNI -->
        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="DNI"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDNI3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto"
            android:textColor="#555555"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgSuper4"
        android:layout_width="221dp"
        android:layout_height="156dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- Botón de editar -->
    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSuper4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditardetalle"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Supervisor"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="#0135F1"
            app:icon="@drawable/editsupervi"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#EFEBEB" />
    </LinearLayout>


    <!-- Botón de eliminar -->
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <!-- Botón solo con ícono -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminardetalle"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:padding="0dp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="999dp"
            app:icon="@drawable/borrarsupervi"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="#FF0000" />
    </LinearLayout>

    <!-- Botón de regreso -->
    <LinearLayout
        android:layout_width="83dp"
        android:layout_height="92dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <!-- Botón solo con ícono -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegresardetalle"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="60dp"
            android:layout_height="64dp"
            android:padding="0dp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="999dp"
            app:icon="@drawable/regresar"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="50dp"
            app:iconTint="#082EFF" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>